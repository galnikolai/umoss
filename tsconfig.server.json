{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./server",
    "outDir": "./dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "declaration": false
  },
  "include": ["server/**/*.ts", "server/**/*.js", "server/**/*.d.ts"],
  "exclude": ["fdvdfvdfv", "node_modules", "public", "dist", "**/*.spec.ts"]
}
